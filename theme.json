{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"settings": {
		"color": {
			"gradients": [
				{
					"slug": "vertical-secondary-to-tertiary",
					"gradient": "linear-gradient(to bottom,var(--wp--preset--color--secondary) 0%,var(--wp--preset--color--tertiary) 100%)",
					"name": "Vertical secondary to tertiary"
				},
				{
					"slug": "vertical-secondary-to-base",
					"gradient": "linear-gradient(to bottom,var(--wp--preset--color--secondary) 0%,var(--wp--preset--color--base) 100%)",
					"name": "Vertical secondary to base"
				},
				{
					"gradient": "linear-gradient(180deg, var(--wp--preset--color--base) 0 min(24rem, 10%), var(--wp--preset--color--secondary) 0% 30%, var(--wp--preset--color--base) 100%)",
					"name": "Base to Secondary to Base",
					"slug": "base-secondary-base"
				},
				{
					"slug": "vertical-tertiary-to-base",
					"gradient": "linear-gradient(to bottom,var(--wp--preset--color--tertiary) 0%,var(--wp--preset--color--base) 100%)",
					"name": "Vertical tertiary to base"
				},
				{
					"slug": "diagonal-white-to-base",
					"gradient": "linear-gradient(to bottom right,var(--wp--preset--color--white) 0%,var(--wp--preset--color--base) 100%)",
					"name": "Diagonal white to base"
				},
				{
					"slug": "diagonal-primary-to-contrast",
					"gradient": "linear-gradient(to bottom right,var(--wp--preset--color--primary) 0%,var(--wp--preset--color--contrast) 100%)",
					"name": "Diagonal primary to contrast"
				},
				{
					"slug": "diagonal-secondary-to-base",
					"gradient": "linear-gradient(to bottom right,var(--wp--preset--color--secondary) 50%,var(--wp--preset--color--base) 50%)",
					"name": "Diagonal secondary to base"
				},
				{
					"slug": "diagonal-base-to-secondary",
					"gradient": "linear-gradient(to bottom right,var(--wp--preset--color--base) 50%,var(--wp--preset--color--secondary) 50%)",
					"name": "Diagonal base to secondary"
				},
				{
					"slug": "diagonal-tertiary-to-base",
					"gradient": "linear-gradient(to bottom right,var(--wp--preset--color--tertiary) 50%,var(--wp--preset--color--base) 50%)",
					"name": "Diagonal tertiary to base"
				},
				{
					"slug": "diagonal-base-to-tertiary",
					"gradient": "linear-gradient(to bottom right,var(--wp--preset--color--base) 50%,var(--wp--preset--color--tertiary) 50%)",
					"name": "Diagonal base to tertiary"
				}
			],
			"palette": [
				{
					"color": "#EEEEFF",
					"name": "Base",
					"slug": "base"
				},
				{
					"color": "#1A1B41",
					"name": "Contrast",
					"slug": "contrast"
				},
				{
					"color": "#058ed9",
					"name": "Primary",
					"slug": "primary"
				},
				{
					"color": "#06D6A0",
					"name": "Secondary",
					"slug": "secondary"
				},
				{
					"color": "#FFB100",
					"name": "Tertiary",
					"slug": "tertiary"
				}
			]
		},
		"custom": {
			"paragraph": {
				"dropcap": {
					"margin": ".1em .1em 0 0",
					"typography": {
						"fontSize": "4rem",
						"fontWeight": "500",
						"fontFamily": "var:preset|font-family|noto-serif"
					}
				}
			},
			"textDecoration": {
				"thickness": "0.1rem"
			},
			"textUnderline": {
				"offset": "0.2rem",
				"offset-hover": "0.4rem",
				"offset-transition": "250ms"
			}
		},
		"layout": {
			"wideSize": "1200px"
		},
		"spacing": {
			"blockGap": false
		},
		"typography": {
			"dropCap": true,
			"fontFamilies": [
				{
					"name": "Open Sans",
					"slug": "open-sans",
					"fontFamily": "\"Open Sans\", sans-serif",
					"fontFace": [
						{
							"src": [
								"file:./assets/fonts/open-sans/OpenSans-Italic-VariableFont_wdth,wght.ttf"
							],
							"fontWeight": "300 800",
							"fontStyle": "italic",
							"fontFamily": "\"Open Sans\""
						},
						{
							"src": [
								"file:./assets/fonts/open-sans/OpenSans-VariableFont_wdth,wght.ttf"
							],
							"fontWeight": "300 800",
							"fontStyle": "normal",
							"fontFamily": "\"Open Sans\""

						}
					]
				},
				{
					"name": "Noto Serif",
					"slug": "noto-serif",
					"fontFamily": "\"Noto Serif\", serif",
					"fontFace": [
						{
							"src": [
								"file:./assets/fonts/noto-serif/NotoSerif-VariableFont_wdth,wght.ttf"
							],
							"fontWeight": "100 900",
							"fontStyle": "normal",
							"fontFamily": "\"Noto Serif\""
						},
						{
							"src": [
								"file:./assets/fonts/noto-serif/NotoSerif-Italic-VariableFont_wdth,wght.ttf"
							],
							"fontWeight": "100 900",
							"fontStyle": "italic",
							"fontFamily": "\"Noto Serif\""
						}
					]
				}
			],
			"fontSizes": [
				{
					"fluid": {
						"min": "0.875rem",
						"max": "1rem"
					},
					"size": "1rem",
					"slug": "small"
				},
				{
					"fluid": {
						"min": "1rem",
						"max": "1.25rem"
					},
					"size": "1.125rem",
					"slug": "medium"
				},
				{
					"fluid": {
						"min": "1.5rem",
						"max": "2rem"
					},
					"size": "1.75rem",
					"slug": "large"
				},
				{
					"fluid": {
						"min": "2rem",
						"max": "2.5rem"
					},
					"size": "2.25rem",
					"slug": "x-large"
				},
				{
					"fluid": {
						"min": "4rem",
						"max": "5rem"
					},
					"size": "4.5rem",
					"slug": "xx-large"
				},
				{
					"fluid": {
						"min": "5rem",
						"max": "6rem"
					},
					"size": "5.5rem",
					"slug": "Gigantic"
				}
			]
		},
		"shadow": {
			"presets": [
				{
					"name": "Small",
					"slug": "sm",
					"shadow": "0 .125rem .25rem rgba(0, 0, 0, 0.075)"
				}
			]
		}
	},
	"styles": {
		"blocks": {
			"core/query-title": {
				"typography": {
					"fontFamily": "var:preset|font-family|open-sans"
				}
			},
			"core/navigation": {
				"typography": {
					"fontFamily": "var:preset|font-family|noto-serif",
					"fontSize": "var:preset|font-size|gigantic",
					"lineHeight": "0.75"
				}
			},
			"core/post-content": {
				"elements": {
					"link": {
						"color": {
							"text": "var(--wp--preset--color--primary)"
						}
					}
				}
			},
			"core/post-title": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--x-large)",
					"fontWeight": "600"
				}
			},
			"core/site-title": {
				"elements": {
					"link": {
						":hover": {
							"typography": {
								"textDecoration": "underline"
							}
						},
						":focus": {
							"typography": {
								"textDecoration": "underline"
							}
						},
						":active": {
							"typography": {
								"textDecoration": "underline"
							}
						},
						"typography": {
							"fontSize": "clamp(0.75rem, 6vw, 1.875rem)",
							"textDecoration": "underline"
						},
						"color": {
							"text": "var(--wp--preset--color--primary)"
						}
					}
				}

			},
			"core/button": {
				"variations": {
					"outline" : {
						"color": {
							"text": "var(--wp--preset--color--primary)"
						}
					}
				}
			},
			"core/separator": {
				"border": {
					"color": "currentColor",
					"style": "solid",
					"width": "0 0 3px 0"
				},
				"color": {
					"text": "var(--wp--preset--color--contrast)"
				},
				"css": " &:not(.is-style-wide):not(.is-style-dots):not(.alignwide):not(.alignfull){height: 3px}"
			}
		},
		"color": {
			"background": "var(--wp--preset--color--white)",
			"text": "var(--wp--preset--color--contrast)"
		},
		"elements": {
			"button": {
				"border": {
					"radius": "6px"
				},
				"color": {
					"background": "var(--wp--preset--color--primary)",
					"text": "var(--wp--preset--color--base)"
				},
				"spacing": {
					"padding": {
						"bottom": "var(--wp--preset--spacing--30)",
						"left": "var(--wp--preset--spacing--30)",
						"right": "var(--wp--preset--spacing--30)",
						"top": "var(--wp--preset--spacing--30)"
					}
				},
				"typography": {
					"fontWeight": "600"
				},
				":hover": {
					"color": {
						"background": "var(--wp--preset--color--contrast)",
						"text": "var(--wp--preset--color--base)"
					}
				},
				":focus": {
					"color": {
						"background": "var(--wp--preset--color--contrast)",
						"text": "var(--wp--preset--color--base)"
					}
				},
				":active": {
					"color": {
						"background": "var(--wp--preset--color--secondary)",
						"text": "var(--wp--preset--color--base)"
					}
				},
				":visited": {
					"color": {
						"text": "var(--wp--preset--color--contrast)"
					}
				}
			},
			"h1": {
				"typography": {
					"fontSize": "3.625rem",
					"lineHeight": "1.2"
				}
			},
			"h2": {
				"typography": {
					"fontSize": "clamp(2.625rem, calc(2.625rem + ((1vw - 0.48rem) * 8.4135)), 3.25rem)",
					"lineHeight": "1.2"
				}
			},
			"h3": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--x-large)"
				}
			},
			"h4": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)"
				}
			},
			"h5": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)",
					"fontWeight": "700",
					"textTransform": "uppercase"
				}
			},
			"h6": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)",
					"textTransform": "uppercase"
				}
			},
			"heading": {
				"color": {
					"text": "var(--wp--preset--color--primary)"
				},
				"typography": {
					"fontFamily": "var:preset|font-family|noto-serif",
					"fontWeight": "600",
					"lineHeight": "1.4"
				}
			},
			"link": {
				"color": {
					"text": "var(--wp--preset--color--primary)"
				},
				":hover": {
					"typography": {
						"textDecoration": "underline"
					}
				},
				":focus": {
					"typography": {
						"textDecoration": "underline"
					}
				},
				":active": {
					"color": {
						"text": "var(--wp--preset--color--primary)"
					},
					"typography": {
						"textDecoration": "underline"
					}
				},
				"typography": {
					"fontWeight": "600",
					"textDecoration": "underline"
				}
			}
		},
		"typography": {
			"fontFamily": "var:preset|font-family|open-sans",
			"fontSize": "var:preset|font-size|small",
			"fontWeight": "400",
			"lineHeight": "1.5"
		}
	}
}
